<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <org.hisp.dhis.client.sdk.ui.views.FontTextView
        android:id="@+id/current_app_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="8dp"
        android:text="@string/app_current_header"
        android:textSize="17sp"
        app:font="@string/font_name_medium"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/app_icon"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:contentDescription="App icon"/>

        <org.hisp.dhis.client.sdk.ui.views.FontTextView
            android:id="@+id/about_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="about_app"
            android:textSize="17sp"
            app:font="@string/font_name_regular"/>
    </LinearLayout>

    <org.hisp.dhis.client.sdk.ui.views.FontTextView
        android:id="@+id/about_session"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp"
        android:padding="8dp"
        android:text="about_session"
        android:textSize="17sp"
        app:font="@string/font_name_regular"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_divider"/>

    <org.hisp.dhis.client.sdk.ui.views.FontTextView
        android:id="@+id/other_app_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="8dp"
        android:text="@string/app_other_header"
        android:textSize="17sp"
        app:font="@string/font_name_medium"/>

</LinearLayout>