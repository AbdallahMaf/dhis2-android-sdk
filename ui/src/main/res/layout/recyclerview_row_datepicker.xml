<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="16dp">

        <include layout="@layout/recyclerview_row_label" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/date_picker_row_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <org.hisp.dhis.client.sdk.ui.views.FontEditText
                android:id="@+id/date_picker_row_date_picker_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="false"
                android:includeFontPadding="false"
                android:textSize="@dimen/text_size_large"
                app:font="@string/font_name_regular" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <org.hisp.dhis.client.sdk.ui.views.FontButton
                    android:id="@+id/date_picker_row_date_picker_button_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:font="@string/font_name_condensed" />

                <org.hisp.dhis.client.sdk.ui.views.FontButton
                    android:id="@+id/date_picker_row_date_picker_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:font="@string/font_name_condensed" />

            </LinearLayout>

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="64dp"
        android:layout_height="match_parent"
        android:minHeight="64dp"
        android:orientation="horizontal">

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/color_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageButton
                android:id="@+id/button_today"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:adjustViewBounds="true"
                android:background="@drawable/button_background_light"
                android:contentDescription="@string/stub_description"
                android:src="@drawable/ic_today" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_divider" />

            <ImageButton
                android:id="@+id/button_clear"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:adjustViewBounds="true"
                android:background="@drawable/button_background_light"
                android:contentDescription="@string/stub_description"
                android:src="@drawable/ic_cancel" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>